{
  "name": "drq-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3005",
    "build": "next build",
    "start": "next start -p 3005",
    "lint": "next lint",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "vercel",
    "deploy:prod": "vercel --prod",
    "update": "git pull && npm install",
    "update:deploy": "npm run update && npm run deploy",
    "preview": "npm run build && npm run start",
    "backup": "node scripts/backup-content.js create",
    "backup:restore": "node scripts/backup-content.js restore",
    "content:update": "npm run backup && npm run dev",
    "content:deploy": "npm run backup && npm run update:deploy",
    "verify": "node scripts/verify-setup.js",
    "setup": "npm install && npm run verify"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "class-variance-authority": "^0.7.0",
    "mongodb": "^6.3.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vercel": "^32.6.1"
  }
}
