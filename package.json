{
  "name": "drq-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3007",
    "build": "next build",
    "build:optimize": "node scripts/optimize-build.js",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start -p 3007",
    "lint": "next lint",
    "pre-deploy": "node scripts/pre-deploy.js",
    "deploy": "npm run pre-deploy && node scripts/deploy.js",
    "deploy:staging": "npm run pre-deploy && vercel",
    "deploy:prod": "npm run pre-deploy && vercel --prod",
    "update": "git pull && npm install",
    "update:deploy": "npm run update && npm run deploy",
    "preview": "npm run build && npm run start",
    "backup": "node scripts/backup-content.js create",
    "backup:restore": "node scripts/backup-content.js restore",
    "backup:env": "node scripts/backup-env.js create",
    "backup:env:list": "node scripts/backup-env.js list",
    "backup:env:restore": "node scripts/backup-env.js restore",
    "backup:all": "npm run backup && npm run backup:env",
    "content:update": "npm run backup && npm run dev",
    "content:deploy": "npm run backup && npm run update:deploy",
    "verify": "node scripts/verify-setup.js",
    "verify:env": "node scripts/verify-env.js",
    "verify:all": "node scripts/verify-deployment.js",
    "setup": "npm install && npm run verify:all",
    "safe-deploy": "npm run verify:all && npm run backup:all && npm run deploy",
    "clean": "rimraf .next node_modules/.cache",
    "clean:full": "rimraf .next node_modules && npm install",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true npm run build",
    "security": "npm audit fix && npm audit",
    "env:prod": "node scripts/switch-env.js production",
    "env:dev": "node scripts/switch-env.js development",
    "env:staging": "node scripts/switch-env.js staging",
    "env:backup": "npm run backup:env",
    "env:list": "npm run backup:env:list",
    "env:restore": "npm run backup:env:restore",
    "env:verify": "npm run verify:env",
    "cache:refresh": "node scripts/refresh-cache.js",
    "cache:status": "node scripts/refresh-cache.js --status",
    "cache:monitor": "node scripts/refresh-cache.js --monitor",
    "monitor": "node scripts/monitor.js",
    "monitor:status": "node scripts/monitor.js --status",
    "monitor:health": "node scripts/monitor.js --health",
    "monitor:watch": "node scripts/monitor.js --watch",
    "final-check": "npm run verify:all && npm run env:verify && npm run security"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@sentry/nextjs": "^7.86.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "class-variance-authority": "^0.7.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "logrocket": "^7.0.0",
    "mongodb": "^6.3.0",
    "next": "^14.0.4",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unsplash-js": "^7.0.18",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@types/google.maps": "^3.58.1",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "null-loader": "^4.0.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vercel": "^39.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
