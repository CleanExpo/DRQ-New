# API Configuration
NEXT_PUBLIC_API_URL=https://api.disasterrecoveryqld.au
NEXT_PUBLIC_SITE_URL=https://disasterrecoveryqld.au

# Security (Replace with your own secure keys)
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Google Services (Replace with your own API keys)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-site-verification
NEXT_PUBLIC_GTM_ID=your-gtm-id
NEXT_PUBLIC_GA_ID=your-ga-id

# Sentry (Replace with your own keys)
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Performance Monitoring (Replace with your own keys)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=DRQ-Development
LOGROCKET_APP_ID=your-logrocket-app-id

# Database (Replace with your own connection strings)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
REDIS_URL=redis://username:password@host:port

# Image Services (Replace with your own API keys)
NEXT_PUBLIC_BING_API_KEY=your-bing-api-key
NEXT_PUBLIC_PEXELS_API_KEY=your-pexels-api-key

# Company Details
NEXT_PUBLIC_COMPANY_PHONE=1300 309 361
NEXT_PUBLIC_COMPANY_EMAIL=admin@disasterrecoveryqld.au
NEXT_PUBLIC_COMPANY_HOURS_WEEKDAY="Monday to Friday 8am to 4pm"
NEXT_PUBLIC_COMPANY_HOURS_WEEKEND="Saturday - Sunday (On Call)"
NEXT_PUBLIC_COMPANY_HOURS_EMERGENCY="24/7 365 Emergency Services"

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_MONITORING=true
ENABLE_DEBUG=true
ENABLE_TEST_ACCOUNTS=true

# Cache Settings
CACHE_TTL=60
REVALIDATE_INTERVAL=30
